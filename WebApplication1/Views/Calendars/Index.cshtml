@model IEnumerable<WebApplication1.Models.Calendar>

@{
    ViewData["Title"] = "Index";
}


<h2>檔案上傳</h2>


<form method="post" enctype="multipart/form-data" asp-controller="UploadFiles" asp-action="Index">
    <div class="form-group">
        <div class="col-md-10">
            <p>從政府部門<a href="https://data.gov.tw/dataset/26557">下載</a>一Excel檔，並上傳至此。</p>
            <input type="file" name="files" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="匯入" />
        </div>
    </div>
</form>

<li onclick="catchdata()">
    最新公告</li>

    <a asp-action="JSONdata">資料庫內的JSON檔</a>


    <div id='jqxWidget'></div>
    <div id='log'></div>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.isHoliday)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.holidayCategory)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.isHoliday)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.holidayCategory)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script>

    $("#jqxWidget").jqxCalendar({
        enableTooltips: true,
        width: 220,
        height: 220
    });
    function Grid_New() {
             $.ajax({
            type: 'GET',
            url: "@Url.Action("JSONdata", "Calendars")",
            data: { get_param: 'value' },
            dataType: 'json',
            async: false,
            success: function (data) {
               for (var i = 1; i < data.length; i++) {
                   if (data[i].isHoliday == '是') {
                       $("#jqxWidget").jqxCalendar('addSpecialDate', new Date(data[i].date), '', data[i].holidayCategory);
                   }
               }
            }
            });
    }
        Grid_New()


        

    </script>
